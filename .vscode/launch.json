{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module CmdVar",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "${command:extension.commandvariable.file.relativeDirDots}.${fileBasenameNoExtension}",
        },
        {
            "name": "Run SRT CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "srt.cli",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug Pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": false, // Set to true to skip stepping into library code
            // "env": {
            //     "MY_ENV_VAR": "my_value" // Example environment variable
            // },
            // "args": [
            //     "-k", "my_specific_test_name" // Example pytest argument
            // ]
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "test",
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "Test Download",
            "type": "debugpy",
            "request": "launch",
            "module": "srt.cli",
            "console": "integratedTerminal",
            "args": [
                "ds",
                "download",
                "tushare",
                "stock",
                "daily",
                "--symbols",
                "000001.SZ,000002.SZ,600083.SH",
                "--start-at",
                "2023-03-01:00:00:00",
                "--stop-at",
                "2023-03-31:00:00:00"
            ],
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Reset DB",
            "module": "srt.cli",
            "console": "integratedTerminal",
            "args": [
                "download",
                "reset-db-or-tables",
                "--reset-db"
            ],
        },
        {
            "name": "Run ds show",
            "type": "debugpy",
            "request": "launch",
            "module": "srt.cli",
            "console": "integratedTerminal",
            "args": [
                "ds",
                "show",
                "tushare",
                "stock_price_ohlcv_daily",
                "601088.SH",
                "--start-at",
                "1980-01-01:00:00:00",
            ],
        },
        {
            "name": "Run Pyramid Strategy",
            "type": "debugpy",
            "request": "launch",
            "module": "srt.research.pyramid.main",
        }
    ]
}
